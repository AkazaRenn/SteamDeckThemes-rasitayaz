{
  "name": "Better Game Badges",
  "version": "v1.4",
  "author": "RasitAyaz",
  "manifest_version": 5,
  "target": "System-Wide",
  "description": "Provides some options to customize the game capsule badges, for example, badges on the highlighted game disappear after a delay by default. Replaces 'all achieved' medals, 'in library' labels with circular badges similar to compatibility badges. Removes info box for the capsules in 'Non-Steam' tab (Doesn't apply to custom TabMaster tabs). Hides info box and compatibility badge for soundtracks. This theme works great with 'Show Download Status' (circular variant) and 'Library Move Extra Info' themes.",
  "inject": {
    "shared.css": ["SP"]
  },
  "patches": {
    "Compatibility badges": {
      "default": "Visible on focus",
      "type": "dropdown",
      "values": {
        "Hidden": {
          "compatibility/hidden.css": ["SP"]
        },
        "Visible on focus": {
          "compatibility/highlighted.css": ["SP"]
        },
        "Always visible": {
          "compatibility/visible.css": ["SP"]
        }
      }
    },
    "Compatibility badge style": {
      "default": "Without the Deck icon",
      "type": "dropdown",
      "values": {
        "Without the Deck icon": {
          "compatibility/no_deck_icon.css": ["SP"]
        },
        "With the Deck icon": {},
        "Hide Verified & Playable & Deck icon": {
          "compatibility/no_deck_icon.css": ["SP"],
          "compatibility/hideplayable.css": ["SP"]
        }
      }
    },
    "All achieved badges": {
      "default": "Visible on focus",
      "type": "dropdown",
      "values": {
        "Hidden": {
          "all_achieved/hidden.css": ["SP"]
        },
        "Visible on focus": {
          "all_achieved/highlighted.css": ["SP"]
        },
        "Always visible": {
          "all_achieved/visible.css": ["SP"]
        }
      }
    },
    "In library badges": {
      "default": "Visible on focus",
      "type": "dropdown",
      "values": {
        "Hidden": {
          "in_library/hidden.css": ["SP"]
        },
        "Visible on focus": {
          "in_library/highlighted.css": ["SP"]
        },
        "Always visible": {
          "in_library/visible.css": ["SP"]
        }
      }
    },
    "Download status badges": {
      "default": "Default",
      "type": "dropdown",
      "values": {
        "Hidden": {
          "download_status/hidden.css": ["SP"]
        },
        "Default": {},
        "Always visible": {
          "download_status/visible.css": ["SP"]
        }
      }
    },
    "Library info boxes": {
      "default": "Always visible",
      "type": "dropdown",
      "values": {
        "Hidden": {
          "info_box/hidden.css": ["SP"]
        },
        "Visible on focus": {
          "info_box/highlighted.css": ["SP"]
        },
        "Always visible": {
          "info_box/visible.css": ["SP"]
        }
      }
    },
    "Hide badges after (seconds)": {
      "default": "0.75",
      "type": "slider",
      "values": {
        "Never": {},
        "0.75": {
          "fade_out_badges.css": ["SP"],
          "--badge-fade-delay": ["0.75s", "SP"]
        },
        "1": {
          "fade_out_badges.css": ["SP"],
          "--badge-fade-delay": ["1s", "SP"]
        },
        "1.5": {
          "fade_out_badges.css": ["SP"],
          "--badge-fade-delay": ["1.5s", "SP"]
        },
        "2": {
          "fade_out_badges.css": ["SP"],
          "--badge-fade-delay": ["2s", "SP"]
        },
        "3": {
          "fade_out_badges.css": ["SP"],
          "--badge-fade-delay": ["3s", "SP"]
        }
      }
    }
  }
}
